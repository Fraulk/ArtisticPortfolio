{% extends "base.html.twig" %}

{% block title %}Portfolio | Welcome{% endblock %}

{% block body %}
<div class="container">
    {% for collection in collections %}
        <div class="row md-1">
            <div class="col-sm-2">
                <img src="{{ collection }}" alt="" class="rounded-circle">
            </div>
            <div class="col-sm2">
                <h1 class="display-3">Collection's title</h1>
            </div>
        </div>    
    {% endfor %}
</div>
{% endblock %}